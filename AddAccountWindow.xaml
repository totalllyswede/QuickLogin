<Window x:Class="QuickLogin.AddAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit Account"
        Height="450"
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        BorderThickness="30"
        BorderBrush="#801A1A2E"
        Background="#DD1A1A2E"
        AllowsTransparency="True">

    <Window.Resources>
        <!-- Save Button -->
        <Style x:Key="SaveButton" TargetType="Button">
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Padding" Value="30,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2ECC71"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#229954"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Cancel Button -->
        <Style x:Key="CancelButton" TargetType="Button">
            <Setter Property="Background" Value="#2E2E48"/>
            <Setter Property="Foreground" Value="#E4E4E4"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#3D3D5C"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Padding" Value="30,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3D3D5C"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#252538"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Input Box Style -->
        <Style x:Key="InputBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2E2E48"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="BorderBrush" Value="#3D3D5C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Password Box Style -->
        <Style x:Key="PasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="#2E2E48"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="BorderBrush" Value="#3D3D5C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="30,20,30,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <!-- Title -->
            <RowDefinition Height="70"/>
            <!-- Display Name -->
            <RowDefinition Height="70"/>
            <!-- Username -->
            <RowDefinition Height="70"/>
            <!-- Password -->
            <RowDefinition Height="*"/>
            <!-- Spacer -->
            <RowDefinition Height="55"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Account Details"
                   Grid.Row="0"
                   FontFamily="Segoe UI Light"
                   FontSize="28"
                   Foreground="White"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>

        <!-- Display Name -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <TextBlock Text="Display Name" 
                       FontFamily="Segoe UI" 
                       FontSize="13" 
                       Foreground="#B0B0B0" 
                       Margin="0,0,0,8"/>
            <TextBox x:Name="DisplayNameText"
                     Style="{StaticResource InputBox}"/>
        </StackPanel>

        <!-- Username -->
        <StackPanel Grid.Row="2" VerticalAlignment="Center">
            <TextBlock Text="Username" 
                       FontFamily="Segoe UI" 
                       FontSize="13" 
                       Foreground="#B0B0B0" 
                       Margin="0,0,0,8"/>
            <TextBox x:Name="UsernameText"
                     Style="{StaticResource InputBox}"/>
        </StackPanel>

        <!-- Password -->
        <StackPanel Grid.Row="3" VerticalAlignment="Center">
            <TextBlock Text="Password" 
                       FontFamily="Segoe UI" 
                       FontSize="13" 
                       Foreground="#B0B0B0" 
                       Margin="0,0,0,8"/>
            <PasswordBox x:Name="PasswordBox"
                         Style="{StaticResource PasswordBox}"/>
        </StackPanel>

        <!-- Buttons -->
        <UniformGrid Grid.Row="5" 
                     Columns="2"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Bottom">
            <Button Content="Save" 
                    Style="{StaticResource SaveButton}" 
                    Click="Save_Click"
                    Margin="0,0,5,0"/>
            <Button Content="Cancel" 
                    Style="{StaticResource CancelButton}" 
                    Click="Cancel_Click"
                    Margin="5,0,0,0"/>
        </UniformGrid>
    </Grid>
</Window>