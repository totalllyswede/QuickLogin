<Window x:Class="QuickLogin.AddAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit Account"
        Height="290"
        Width="480"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" Foreground="White" WindowStyle="None" BorderThickness="40,40,40,40" BorderBrush="#995A5A58" Background="#FF1F1E2F" AllowsTransparency="True">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light Condensed"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#003F6B"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="15,15,15,4" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Display Name -->
            <RowDefinition Height="Auto"/>
            <!-- Username -->
            <RowDefinition Height="Auto"/>
            <!-- Password -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
            <RowDefinition Height="*"/>
            <!-- Spacer -->
        </Grid.RowDefinitions>

        <!-- Display Name -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Center">
            <TextBlock Text="Display Name:" 
                       Width="120"
                       FontFamily="Bahnschrift Light Condensed"
                       FontSize="20"
                       Foreground="White"
                       VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <TextBox x:Name="DisplayNameText"
                     Width="220"
                     FontFamily="Bahnschrift Light Condensed"
                     FontSize="20"
                     Padding="4"/>
        </StackPanel>

        <!-- Username -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Center">
            <TextBlock Text="Username:" 
                       Width="120"
                       FontFamily="Bahnschrift Light Condensed"
                       FontSize="20"
                       Foreground="White"
                       VerticalAlignment="Center"/>
            <TextBox x:Name="UsernameText"
                     Width="220"
                     FontFamily="Bahnschrift Light Condensed"
                     FontSize="20"
                     Padding="4"/>
        </StackPanel>

        <!-- Password -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,15" HorizontalAlignment="Center">
            <TextBlock Text="Password:" 
                       Width="120"
                       FontFamily="Bahnschrift Light Condensed"
                       FontSize="20"
                       Foreground="White"
                       VerticalAlignment="Center"/>
            <PasswordBox x:Name="PasswordBox"
                         Width="220"
                         FontFamily="Bahnschrift Light Condensed"
                         FontSize="20"
                         Padding="4"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,5">
            <Button Content="Save" Style="{StaticResource ModernButton}" Click="Save_Click"/>
            <Button Content="Cancel" Style="{StaticResource ModernButton}" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
