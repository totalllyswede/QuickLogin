<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="QuickLogin.MainWindow"
        Title="QuickLogin"
        Height="310" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1E1E2F" WindowStyle="None" BorderBrush="#FF464646" BorderThickness="4,4,4,4">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#0078D7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light Condensed"/>
            <Setter Property="FontSize" Value="20"/>
            <!-- Smaller button text -->
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="140"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#003F6B"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="ModernButton2" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#FF949393"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light Condensed"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="140"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF616161"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF616161"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="0,10,0,0" Width="480">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40"/>
            <!-- Top instruction -->
            <RowDefinition Height="71"/>
            <RowDefinition Height="45"/>
            <!-- Account label + ComboBox -->
            <RowDefinition Height="60"/>
            <!-- Add/Remove/Edit buttons -->
            <RowDefinition Height="Auto"/>
            <!-- Bottom instruction -->
            <RowDefinition Height="Auto"/>
            <!-- Login button -->
            <!-- Spacer -->
        </Grid.RowDefinitions>

        <!-- Bottom instruction -->
        <TextBlock Text="WoW Client Must Be Open to use QuickLogin" FontFamily="Bahnschrift SemiBold" FontSize="20" Foreground="White" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,5"/>

        <!-- Add / Remove / Edit Buttons -->
        <DockPanel Grid.Row="2" Margin="20,20,20,20" VerticalAlignment="Center">
            <ComboBox x:Name="AccountCombo" 
                DisplayMemberPath="DisplayName"
                Text="Choose Account"
                FontFamily="Bahnschrift SemiBold Condensed"
                FontWeight="Bold"
                FontSize="22"
                Padding="5"
                Background="#ffffff"
                Foreground="#000000"
                BorderBrush="#555"
                BorderThickness="1" 
                SelectionChanged="AccountCombo_SelectionChanged" VerticalAlignment="Center" Height="36" Width="400">

                <!-- Dropdown items style -->
                <ComboBox.ItemContainerStyle>
                    <Style TargetType="{x:Type ComboBoxItem}">
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="Background" Value="#ffffff"/>
                        <Setter Property="FontFamily" Value="Bahnschrift SemiBold Condensed"/>
                        <Setter Property="FontSize" Value="22"/>
                    </Style>
                </ComboBox.ItemContainerStyle>
            </ComboBox>



        </DockPanel>
        <DockPanel Grid.Row="4" HorizontalAlignment="Center" Margin="0,10,0,5">
            <Button Content="Add New Account" Style="{DynamicResource ModernButton2}" Click="AddAccount_Click" Width="190" Margin="5,0,5,0" Height="42"/>
            <Button Content="Remove Selected Account" Style="{DynamicResource ModernButton2}" Click="RemoveAccount_Click" Width="190" Margin="5,0,5,0" Height="42"/>
        </DockPanel>

        <!-- Add / Remove / Edit Buttons -->
        <DockPanel Grid.Row="5" HorizontalAlignment="Center" Margin="0,10,0,10">
            <Button Content="Login &amp; Close"
                Style="{StaticResource ModernButton}" Click="TypeCredentials_Click" Height="42"/>
            <Button Content="Login"
                Style="{StaticResource ModernButton}" Click="TypeCredentials_ClickStay" Height="42"/>
            <Button Content="Exit"
                Style="{StaticResource ModernButton}" Click="Close_Click" Height="42"/>

        </DockPanel>

        <!-- Login Button -->


        <DockPanel Grid.Row="3" VerticalAlignment="Center">

            <TextBlock Foreground="#FFE60000" FontFamily="Bahnschrift SemiBold" FontSize="20" VerticalAlignment="Center" TextAlignment="Center" Padding="0,0,0,5"><Run Text="'Remember Account Name' needs to be"/><LineBreak/><Run Text="unchecked on the login screen."/></TextBlock>
        </DockPanel>

    </Grid>
</Window>
